helmDefaults:
  createNamespace: true
  wait: true
  recreatePods: true

releases:
- name: {{ .Values.nfsServer.name }}
  namespace: {{ .Values.ocean.namespace }}
  version: 0.1.1
  chart: ../../custom-charts/nfs-server
  condition: nfsServer.enabled
  values:
  - values.yaml.gotmpl
  - {{ toYaml .Values.nfsServer.values | nindent 4 }}